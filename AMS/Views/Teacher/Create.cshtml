
<html xmlns="http://www.w3.org/1999/xhtml">
    <head><title></title>
    <link rel="stylesheet" href="~/css/TeacherCreate.css">
    </head>
    <body>
    @model AMS.Models.Teacher
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }


    <h1>Create Teacher</h1>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CourseId">Course</label>
            <select asp-for="CourseId" class="form-control">
                <option value="">-- Select Course --</option>
                @if (ViewBag.Courses != null)
                {
                    foreach (var course in ViewBag.Courses)
                    {
                        <option value="@course.Id">@course.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="CourseId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Sections</label><br />
            @if (ViewBag.Sections != null)
            {
                foreach (var sec in ViewBag.Sections)
                {
                    <div class="form-check">
                        <input type="checkbox" name="SectionIds" value="@sec.Id" class="form-check-input" />
                        <label class="form-check-label">@sec.Name</label>
                    </div>
                }
            }
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
    </body>
</html>