@model List<AMS.Models.StudentViewModel>

<div>
    <h1>Registered Students</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Student ID</th>
                <th>Student Name</th>
                <th>Section Name</th>
                <th>Courses</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.StudentId</td>
                    <td>@student.StudentName</td>
                    <td>@student.SectionName</td>
                    <td>@student.Courses</td>
                    <td>
                        <a href="/Student/Edit/@student.StudentId" class="btn btn-sm btn-warning">Edit</a>
                        <a href="/Student/Delete/@student.StudentId" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>

    <a href="/Admin/Dashboard" class="btn btn-secondary">Back to Dashboard</a>
</div>
