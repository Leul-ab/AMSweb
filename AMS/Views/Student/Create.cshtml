@model AMS.Models.Student

<h1>Register Student</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SectionId">Section</label>
        <select asp-for="SectionId" class="form-control">
            <option value="">-- Select Section --</option>
            @foreach (var sec in ViewBag.Sections)
            {
                <option value="@sec.Id">@sec.Name</option>
            }
        </select>
        <span asp-validation-for="SectionId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Courses</label>
        @foreach (var course in ViewBag.Courses)
        {
            <div class="form-check">
                <input type="checkbox" name="CourseIds" value="@course.Id" class="form-check-input" />
                <label class="form-check-label">@course.Name</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
}
