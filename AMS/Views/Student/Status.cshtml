@model List<AMS.Models.AttendanceStatusViewModel>

<h2>Attendance Status</h2>

<table class="table">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Section Name</th>
            <th>Day 1</th>
            <th>Day 2</th>
            <th>Day 3</th>
            <!-- Add more days as needed -->
        </tr>
    </thead>
    <tbody>
        @foreach (var status in Model)
        {
            <tr>
                <td>@status.CourseName</td>
                <td>@status.SectionName</td>
                <td>@(status.Day1.HasValue && status.Day1.Value ? "Present" : "Absent")</td>
                <td>@(status.Day2.HasValue && status.Day2.Value ? "Present" : "Absent")</td>
                <td>@(status.Day3.HasValue && status.Day3.Value ? "Present" : "Absent")</td>
                <!-- Add more days as needed -->
            </tr>
        }
    </tbody>
</table>
